#           urgent_workspace #282828BB #282828BB #EBDBB2
#           statusline #EBDBB2
#           separator $main
            background $black
            statusline $accent
	    separator $accent

	    # ---| border | bg | fg |---
	    focused_workspace $accent $accent $black
	    active_workspace $black $black $accent
	    inactive_workspace $black $black $accent
            urgent_workspace $black $black $urgent
        }
}

